{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "效率工具",
  "version": "0.1.0",
  "identifier": "com.snippets-code.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "搜索",
        "url": "/",
        "width": 484,
        "height": 324,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "center": true,
        "shadow": false,
        "visible": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' https:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:; connect-src 'self' https:'"
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "identifier": "com.snippets-code.app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "snippets-code",
    "longDescription": "代码片段效率工具",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/GigaPuddings/snippets-code-t/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "你的公钥"
    }
  }
}
